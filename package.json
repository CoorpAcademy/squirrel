{
  "name": "@coorpacademy/squirrel",
  "version": "2.4.1",
  "description": "High level client for Coorpacademy's squirrel service",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf .nyc_output coverage lib",
    "prepublish": "npm run build",
    "build": "babel src --out-dir lib -s --copy-files",
    "test": "npm run lint && npm run nyc",
    "lint": "eslint src/ *.js *.json --ext .js,.json",
    "lint:fix": "npm run lint -- --fix",
    "ava": "NODE_ENV=test ava",
    "nyc": "NODE_ENV=test nyc ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coorpacademy/squirrel.git"
  },
  "keywords": [
    "squirrel"
  ],
  "author": "dev@coorpacademy.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coorpacademy/squirrel/issues"
  },
  "bin": {
    "squirrel-sync": "lib/bin/sync.js",
    "squirrel-watch": "lib/bin/watch.js"
  },
  "homepage": "https://github.com/coorpacademy/squirrel#readme",
  "dependencies": {
    "debug": "^3.1.0",
    "lodash": "^4.17.2",
    "minimist": "^1.2.0",
    "node-etcd": "^5.0.1",
    "rxjs": "^5.0.0-beta.7"
  },
  "devDependencies": {
    "@coorpacademy/eslint-plugin-coorpacademy": "^7.0.2",
    "ava": "^0.23.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^8.0.1",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-1": "^6.16.0",
    "babel-register": "^6.18.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.9.0",
    "nyc": "^11.2.1"
  },
  "ava": {
    "files": [
      "src/**/test/**/*.js"
    ],
    "require": [
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "**/test/**/*",
      "src/bin"
    ],
    "cache": true,
    "sourceMap": false,
    "instrument": false,
    "require": [
      "babel-register"
    ]
  },
  "engines": {
    "node": ">=6"
  }
}
