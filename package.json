{
  "name": "@coorpacademy/squirrel",
  "version": "2.2.0",
  "description": "High level client for Coorpacademy's squirrel service",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf .nyc_output coverage lib",
    "prepublish": "npm run build",
    "build": "babel src --out-dir lib -s",
    "test": "npm run lint && npm run nyc",
    "lint": "eslint .",
    "ava": "ava",
    "nyc": "nyc ava --all --reporter=text --reporter=lcov",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coorpacademy/squirrel.git"
  },
  "keywords": [
    "squirrel"
  ],
  "author": "dev@coorpacademy.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coorpacademy/squirrel/issues"
  },
  "bin": {
    "squirrel-sync": "lib/bin/sync.js",
    "squirrel-watch": "lib/bin/watch.js"
  },
  "homepage": "https://github.com/coorpacademy/squirrel#readme",
  "dependencies": {
    "debug": "^2.2.0",
    "lodash": "^4.11.2",
    "minimist": "^1.2.0",
    "node-etcd": "^5.0.1",
    "rxjs": "^5.0.0-beta.7"
  },
  "devDependencies": {
    "@coorpacademy/eslint-plugin-coorpacademy": "^1.1.2",
    "ava": "^0.16.0",
    "babel-cli": "^6.9.0",
    "babel-core": "^6.9.1",
    "babel-eslint": "^6.0.3",
    "babel-preset-es2015": "^6.13.0",
    "babel-preset-stage-1": "^6.5.0",
    "babel-register": "^6.9.0",
    "coveralls": "^2.11.8",
    "eslint": "^3.2.0",
    "eslint-plugin-ava": "^3.0.0",
    "eslint-plugin-lodash-fp": "^2.0.0",
    "nyc": "^8.1.0"
  },
  "ava": {
    "files": [
      "src/**/test/**/*.js",
      "!node_module/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "timeout": "5m",
    "failFast": true
  },
  "nyc": {
    "include": [
      "src/**"
    ],
    "exclude": [
      "**/test/**/*",
      "src/bin"
    ],
    "require": [
      "babel-register"
    ],
    "all": true
  },
  "engines": {
    "node": ">=4"
  }
}
